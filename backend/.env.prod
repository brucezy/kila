# .env.production
ENVIRONMENT=production

# Database - Production server with read replica
MYSQL_HOST=prod-db-primary.kila.com
MYSQL_PORT=3306
MYSQL_USER=prod_user
MYSQL_PASSWORD=prod_super_secure_password_from_vault
MYSQL_DATABASE=ai_prompts

# AI Model
ANTHROPIC_API_KEY=sk-ant-prod-key-here
AI_MODEL=claude-sonnet-4-5-20250929

# Security - MUST be strong and from secrets manager
SECRET_KEY=production-secret-key-from-aws-secrets-manager-very-long-and-secure

# Logging
LOG_LEVEL=WARNING

# CORS - Strict whitelist
ALLOWED_ORIGINS=["https://yourapp.com","https://www.yourapp.com","https://api.yourapp.com"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
